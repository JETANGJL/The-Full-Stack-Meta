# Auto-detect text files and normalize line endings
* text=auto

# Python / Django source files
*.py text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files (do not change line endings)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.wav binary
*.mp3 binary
*.mp4 binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.db binary
*.sqlite3 binary

# Django migrations (still Python, keep normalized)
*/migrations/*.py text eol=lf